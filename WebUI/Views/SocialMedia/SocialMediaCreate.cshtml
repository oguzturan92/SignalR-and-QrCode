                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Sosyal Medya Ekle</div>
                    </div>
                    <div class="card-body">
                        <form asp-controller="SocialMedia" asp-action="SocialMediaCreate" method="post">
                            <div class="form-group">
                                <label for="SocialMediaIcon">Ä°kon</label>
                                <input type="text" class="form-control" asp-for="SocialMediaIcon" id="SocialMediaIcon">
