@model GetByIdMessageDto
@{
    ViewData["Title"] = "MessageUpdate";
    Layout = "_LayoutAdmin";
}

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Mesaj Detay</div>
                    </div>
                    <div class="card-body">
                        <form>
                            <input type="hidden" asp-for="MessageId">
                            <div class="form-group">
                                <label for="MessageDate">Tarih</label>
                                <input type="text" class="form-control" asp-for="MessageDate" id="MessageDate" disabled>
                            </div>
                            <div class="form-group">
                                <label for="MessageFullname">Ad Soyad</label>
                                <input type="text" class="form-control" asp-for="MessageFullname" id="MessageFullname" disabled>
                            </div>
                            <div class="form-group">
                                <label for="MessageMail">Mail</label>
                                <input type="text" class="form-control" asp-for="MessageMail" id="MessageMail" disabled>
                            </div>
                            <div class="form-group">
                                <label for="MessageSubject">Konu</label>
                                <input type="text" class="form-control" asp-for="MessageSubject" id="MessageSubject" disabled>
                            </div>
                            <div class="form-group">
                                <label for="MessageContent">Mesaj</label>
                                <textarea class="form-control" id="MessageContent" disabled>@Model.MessageContent</textarea>
                            </div>
                            <div class="form-group">
                                <a class="btn btn-light ml-2" asp-controller="Message" asp-action="MessageList">Geri</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>