@model CreateMailDto
@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutAdmin";
}

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Mail Gönder</div>
                    </div>
                    <div class="card-body">
                        <form asp-controller="Mail" asp-action="Index" method="post">
                            <div class="form-group">
                                <label for="SenderMail">Gönderen Mail</label>
                                <input type="text" class="form-control" asp-for="SenderMail" id="SenderMail">
                            </div>
                            <div class="form-group">
                                <label for="SenderMailPassword">Gönderen Mail Şifre</label>
                                <input type="text" class="form-control" asp-for="SenderMailPassword" id="SenderMailPassword">
                            </div>
                            <div class="form-group">
                                <label for="SenderMailHost">Gönderen Mail Host</label>
                                <input type="text" class="form-control" asp-for="SenderMailHost" id="SenderMailHost">
                            </div>
                            <div class="form-group">
                                <label for="SenderMailPort">Gönderen Mail Port</label>
                                <input type="text" class="form-control" asp-for="SenderMailPort" id="SenderMailPort">
                            </div>
                            <div class="form-group">
                                <label for="SenderMailEnableSSL">Gönderen SSL Durumu</label>
                                <select class="form-control" asp-for="SenderMailEnableSSL" id="SenderMailEnableSSL">
                                    <option disabled selected>Seçiniz</option>
                                    <option value="True">Açık</option>
                                    <option value="False">Kapalı</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="ReceiverMail">Alıcı Mail</label>
                                <input type="text" class="form-control" asp-for="ReceiverMail" id="ReceiverMail">
                            </div>
                            <div class="form-group">
                                <label for="Subject">Konu</label>
                                <input type="text" class="form-control" asp-for="Subject" id="Subject">
                            </div>
                            <div class="form-group">
                                <label for="Body">İçerik</label>
                                <input type="text" class="form-control" asp-for="Body" id="Body">
                            </div>
                            <div class="form-group">
                                <button class="btn btn-success" type="submit">Gönder</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
