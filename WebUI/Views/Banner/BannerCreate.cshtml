@model CreateBannerDto
@{
    ViewData["Title"] = "BannerCreate";
    Layout = "_LayoutAdmin";
}

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Banner Ekle</div>
                    </div>
                    <div class="card-body">
                        <form asp-controller="Banner" asp-action="BannerCreate" method="post">
                            <div class="form-group">
                                <label for="BannerTitle">Başlık</label>
                                <input type="text" class="form-control" asp-for="BannerTitle" id="BannerTitle">
                            </div>
                            <div class="form-group">
                                <label for="BannerSubTitle">Alt Başlık</label>
                                <input type="text" class="form-control" asp-for="BannerSubTitle" id="BannerSubTitle">
                            </div>
                            <div class="form-group">
                                <label for="BannerImage">Resim Link</label>
                                <input type="text" class="form-control" asp-for="BannerImage" id="BannerImage">
                            </div>
                            <div class="form-group">
                                <label for="BannerLink">Link</label>
                                <input type="text" class="form-control" asp-for="BannerLink" id="BannerLink">
                            </div>
                            <div class="form-group">
                                <label for="BannerStatus">Durum</label>
                                <select class="form-control" asp-for="BannerStatus" id="BannerStatus">
                                    <option disabled selected>Seçiniz</option>
                                    <option value="True">Açık</option>
                                    <option value="False">Kapalı</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-success" type="submit">Kaydet</button>
                                <a class="btn btn-light ml-2" asp-controller="Banner" asp-action="BannerList">Geri</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>