@model List<ResultAboutDto>
@{
    ViewData["Title"] = "AboutList";
    Layout = "_LayoutAdmin";
    int count = 0;
}

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Hakkımızda Listesi</div>
                    </div>
                    <div class="card-body">
                        @if (Model.Any())
                        {
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col"></th>
                                        <th scope="col"></th>
                                        <th scope="col">Başlık</th>
                                        <th scope="col" colspan="2"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td><img class="rounded-circle" style="height: 50px;" src="@item.AboutImage" alt=""></td>
                                            <td>@item.AboutTitle</td>
                                            <td><a class="btn btn-info" asp-controller="About" asp-action="AboutUpdate" asp-route-id="@item.AboutId"><i class="la la-pencil"></i></a></td>
                                            <td><a class="btn btn-danger" asp-controller="About" asp-action="AboutDelete" asp-route-id="@item.AboutId"><i class="la la-trash"></i></a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        } else
                        {
                            <div class="alert alert-warning" role="alert">Öge mevcut değil</div>
                        }
                        <hr>
                        <a class="btn btn-success" asp-controller="About" asp-action="AboutCreate">Yeni</a>
                    </div>
                </div>
            </div>
        </div>
    </div>