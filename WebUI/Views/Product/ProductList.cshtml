@model List<ResultProductDto>
@{
    ViewData["Title"] = "ProductList";
    Layout = "_LayoutAdmin";
    int count = 0;
}

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Ürün Listesi</div>
                    </div>
                    <div class="card-body">
                        @if (Model.Any())
                        {
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col"></th>
                                    <th scope="col">Resim</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col"></th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Kategori</th>
                                    <th scope="col" colspan="2"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.ProductName</td>
                                        <td>
                                            @if (item.ProductStatus)
                                            {
                                                <i class="la la-check-circle-o rounded-circle text-success la-2x"></i>
                                            } else
                                            {
                                                <i class="la la-times-circle-o rounded-circle text-danger la-2x"></i>
                                            }
                                        </td>
                                        <td><a class="btn btn-info" asp-controller="Product" asp-action="ProductUpdate" asp-route-id="@item.ProductId"><i class="la la-pencil"></i></a></td>
                                        <td><a class="btn btn-danger" asp-controller="Product" asp-action="ProductDelete" asp-route-id="@item.ProductId"><i class="la la-trash"></i></a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        } else
                        {
                            <div class="alert alert-warning" role="alert">Öge mevcut değil</div>
                        }
                        <hr>
                        <a class="btn btn-success" asp-controller="Product" asp-action="ProductCreate">Yeni</a>
                    </div>
                </div>
            </div>
        </div>
    </div>