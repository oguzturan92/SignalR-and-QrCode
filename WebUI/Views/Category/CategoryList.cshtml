@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "CategoryList";
    Layout = "_LayoutAdmin";
    int count = 0;
}

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Kategori Listesi</div>
                    </div>
                    <div class="card-body">
                        @if (Model.Any())
                        {
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col"></th>
                                        <th scope="col">Başlık</th>
                                        <th scope="col">Durum</th>
                                        <th scope="col" colspan="2"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>@item.CategoryName</td>
                                            <td>
                                                @if (item.CategoryStatus)
                                                {
                                                    <i class="la la-check-circle-o rounded-circle text-success la-2x"></i>
                                                } else
                                                {
                                                    <i class="la la-times-circle-o rounded-circle text-danger la-2x"></i>
                                                }
                                            </td>
                                            <td><a class="btn btn-info" asp-controller="Category" asp-action="CategoryUpdate" asp-route-id="@item.CategoryId"><i class="la la-pencil"></i></a></td>
                                            <td><a class="btn btn-danger" asp-controller="Category" asp-action="CategoryDelete" asp-route-id="@item.CategoryId"><i class="la la-trash"></i></a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        } else
                        {
                            <div class="alert alert-warning" role="alert">Öge mevcut değil</div>
                        }
                        <hr>
                        <a class="btn btn-success" asp-controller="Category" asp-action="CategoryCreate">Yeni</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

<!-- Create ve Delete Metotdlarında işlem başarılıysa, List metoduna yanıt gider. List metoduna gelen sonucu buraya aktarırız ve SignalR Send metodlarını tetikleriz. Böylelikle, SignalR sonuçları sayfalara yansır.  -->
@if (TempData["signalrActive"] != null)
{
    @section Scripts
    {
        <script src="/lib/signalr/signalr.js"></script>
        <script src="/lib/signalr/signalr.min.js"></script>

        <script>

            var connection = new signalR.HubConnectionBuilder().withUrl("https://localhost:7227/SignalRHub").build();

            // Connection, Start olduktan sonra
            connection.start().then(() => {
                
                // Hub sınıfı metod adı ile metod tetiklenir
                connection.invoke("SendCategoryCount");

            }).catch((err) => { console.log(err) });

        </script>
    }
}