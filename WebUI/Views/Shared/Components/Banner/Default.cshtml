@model List<ResultBannerDto>

    <section class="offer_section layout_padding-bottom">
        <div class="offer_container">
            <div class="container ">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-md-6  ">
                            <div class="box ">
                                <div class="img-box">
                                    <img src="@item.BannerImage" alt="">
                                </div>
                                <div class="detail-box">
                                    <h5>@item.BannerTitle</h5>
                                    <h6><span>@item.BannerSubTitle</span> Off</h6>
                                    <a href="@item.BannerLink">Şimdi Başla <i class="fa fa-shopping-cart"></i></a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>